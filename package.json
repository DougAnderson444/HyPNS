{
  "name": "hypns",
  "version": "1.1.1",
  "description": "Hybrid of Hyper-protocol and IPNS; a module to pin IPNS names using hyper-protocol",
  "main": "lib/index.js",
  "module": "es/index.js",
  "files": [
    "lib",
    "es"
  ],
  "scripts": {
    "build:browserify": "browserify -t [ babelify --global --ignore [ test ] ] --standalone hypns src/index.js > hypns-bundle.js",
    "build:commonjs": "cross-env BABEL_ENV=commonjs babel src -d lib --ignore \"**/test\" --delete-dir-on-start",
    "build:es": "cross-env BABEL_ENV=es babel src -d es --ignore \"**/test\" --delete-dir-on-start",
    "build": "npm run build:commonjs && npm run build:es",
    "test": "npm run test-browser && npm run test-node",
    "test-browser": "mochify --chrome --transform [ babelify --global --ignore [ test ] ] ",
    "test-node": "cross-env NODE_ENV=test nyc mocha --exit",
    "coverage": "codecov",
    "debug": "mochify --debug",
    "watch": "mochify --watch",
    "webdriver": "mochify --wd"
  },
  "browserify": {
    "transform": ["babelify --global"]
  },
  "dependencies": {
    "@DougAnderson444/kappa-view-list": "github:DougAnderson444/kappa-view-list",
    "@DougAnderson444/random-access-idb": "github:DougAnderson444/random-access-idb",
    "@corestore/networker": "^1.0.3",
    "chai-as-promised": "^7.1.1",
    "corestore": "^5.7.3",
    "events.once": "^2.0.2",
    "hypermultifeed": "github:DougAnderson444/hypermultifeed",
    "kappa-core": "^6.0.0",
    "level-mem": "^5.0.1",
    "pify": "^5.0.0",
    "random-access-memory": "^3.1.1",
    "tmp": "^0.2.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.11.6",
    "@babel/core": "^7.11.6",
    "@babel/preset-env": "^7.11.5",
    "@babel/register": "^7.11.5",
    "@istanbuljs/nyc-config-babel": "^3.0.0",
    "babel-plugin-istanbul": "^6.0.0",
    "babel-plugin-module-resolver": "^4.0.0",
    "babelify": "^10.0.0",
    "browserify": "^16.5.2",
    "chai": "^4.2.0",
    "codecov": "^3.7.2",
    "cross-env": "^7.0.2",
    "hyperswarm-web": "^2.1.1",
    "mocha": "^8.1.3",
    "mochify": "^6.6.0",
    "nyc": "^15.1.0",
    "util": "^0.12.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DougAnderson444/HyPNS.git"
  },
  "keywords": [
    "HyPNS"
  ],
  "author": "Doug S Anderson",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/DougAnderson444/HyPNS/issues"
  },
  "homepage": "https://github.com/DougAnderson444/HyPNS#readme"
}
