{
  "presets": [
    [
      "@babel/preset-env",
      { "targets": { "esmodules": true, "node": "current"} }
    ]
  ],
  "plugins": [
    [
      "module-resolver",
      {
        "alias": {
          "multifeed": "hypermultifeed",
          "hyperswarm": "hyperswarm-web",
          "util": "./node_modules/util/util.js"
        }
      }
    ]
  ],
  "env": {
    "test": {
      "plugins": [
        [
          "istanbul"
        ]
      ]
    }
  }
}
